<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:padding="10dp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:id="@+id/item_myorder_shoplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_myorder_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/item_myorder_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_order_shop_next"
            android:lines="1"
            android:singleLine="true"
            android:layout_toRightOf="@+id/item_myorder_logo"
            android:layout_toLeftOf="@+id/item_myorder_ssss"
            android:text="撒豆i符号i圣asdsdajf诞节" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_myorder_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/grey"
            android:singleLine="true"
            android:text="等待买家付款" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_myorder_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/item_myorder_shoplayout"/>
    <TextView
        android:id="@+id/item_myorder_price_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_myorder_list"
        android:text="共1件商品   合计： ￥0.0"/>
    <!--按钮-->
    <ImageView
        android:id="@+id/item_myorder_maijia"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_cancle"
        android:src="@mipmap/ic_btn_maijia"/>
    <ImageView
        android:id="@+id/item_myorder_cancle"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_fukuan"
        android:src="@mipmap/ic_btn_cancle"/>
    <ImageView
        android:id="@+id/item_myorder_fukuan"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_wuliu"
        android:src="@mipmap/ic_btn_fukuan"/>
    <ImageView
        android:id="@+id/item_myorder_wuliu"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_shouhuo"
        android:src="@mipmap/ic_btn_wuliu"/>
    <ImageView
        android:id="@+id/item_myorder_shouhuo"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_deails"
        android:src="@mipmap/ic_btn_shouhuo"/>
    <ImageView
        android:id="@+id/item_myorder_deails"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_after_sales"
        android:src="@mipmap/ic_btn_deatils"/>
    <ImageView
        android:id="@+id/item_myorder_after_sales"
        style="@style/textview_button"
        android:layout_toLeftOf="@+id/item_myorder_comment"
        android:src="@mipmap/ic_btn_shouhou"/>
    <ImageView
        android:id="@+id/item_myorder_comment"
        style="@style/textview_button"
        android:visibility="visible"
        android:layout_toLeftOf="@+id/item_myorder_more"
        android:src="@mipmap/ic_btn_comment"/>
    <ImageView
        android:id="@+id/item_myorder_more"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_myorder_price_all"
        android:layout_toLeftOf="@+id/item_myorder_null"
        android:src="@mipmap/ic_btn_more"/>
    <View
        android:id="@+id/item_myorder_null"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_myorder_price_all"
        android:layout_alignParentRight="true"/>
</RelativeLayout>