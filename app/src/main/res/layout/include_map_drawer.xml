<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/text_map_drawer_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/map_draw_check_layout">
            <ImageView
                android:id="@+id/drawer_map_type_2d"
                style="@style/map_draw_check_image"
                android:checked="true"
                android:src="@mipmap/ic_map_type2d_check"/>
            <TextView
                android:id="@+id/drawer_text_2d"
                style="@style/map_draw_text"
                android:text="2D平面图"/>
        </LinearLayout>
        <LinearLayout
            style="@style/map_draw_check_layout">
            <ImageView
                android:id="@+id/drawer_map_type_wx"
                style="@style/map_draw_check_image"
                android:src="@mipmap/ic_map_type_wx"/>
            <TextView
                android:id="@+id/drawer_text_wx"
                style="@style/map_draw_text"
                android:text="卫星定位图"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/map_draw_check_layout">
            <ImageView
                android:id="@+id/drawer_map_type_3d"
                style="@style/map_draw_check_image"
                android:src="@mipmap/ic_map_type3d"/>
            <TextView
                android:id="@+id/drawer_text_3d"
                style="@style/map_draw_text"
                android:text="3D俯视图"/>
        </LinearLayout>

        <LinearLayout
            style="@style/map_draw_check_layout">
            <ImageView
                android:id="@+id/drawer_map_type_qj"
                style="@style/map_draw_check_image"
                android:src="@mipmap/ic_map_type_qj"/>
            <TextView
                android:id="@+id/drawer_text_qj"
                style="@style/map_draw_text"
                android:text="全景地图"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#a4a4a4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            style="@style/map_draw_check_layout">
            <ImageView
                android:id="@+id/drawer_map_type_lk"
                style="@style/map_draw_check_image"
                android:layout_height="45dp"
                android:layout_width="45dp"
                android:src="@drawable/check_map_type_lk"/>
            <TextView
                android:id="@+id/drawer_text_lk"
                style="@style/map_draw_text"
                android:text="城市路况"/>
        </LinearLayout><LinearLayout
            style="@style/map_draw_check_layout">
            <ImageView
                android:id="@+id/drawer_map_type_cj"
                style="@style/map_draw_check_image"
                android:layout_height="45dp"
                android:layout_width="45dp"
                android:src="@mipmap/ic_map_type_cj"/>
            <TextView
                android:id="@+id/drawer_text_cj"
                style="@style/map_draw_text"
                android:text="测距"/>
        </LinearLayout>
        <LinearLayout
            style="@style/map_draw_check_layout">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>