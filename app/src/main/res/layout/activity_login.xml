<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/login_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@mipmap/ic_login_clear_pre"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="欢迎登录商城"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
            android:gravity="center_vertical"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_login_1"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:maxLength="11"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/login_phone_clear"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@mipmap/ic_login_clear"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/sms_code_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                >
                <EditText
                    android:id="@+id/sms_code_et"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:hint="输入验证码"
                    android:lines="1"
                    android:inputType="number"
                    android:maxLength="11"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/send_check_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pwd_login_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                android:gravity="center_vertical">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/login_pass_v"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@drawable/pre_pass_vg"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/login_tv"
            style="@style/bt_style"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="登录"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_style_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textColor="@color/grey"
                android:text="验证码登录"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="忘记密码"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/login_wx"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_login_wx"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"/>

            <ImageView
                android:id="@+id/login_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_login_qq"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:text="登录代表同意商城点评用户协议、隐私政策，并授权使用您的商城点评账号信息(如昵称、头像、收货地址)以便您统一管理"/>
    </LinearLayout>
</LinearLayout>