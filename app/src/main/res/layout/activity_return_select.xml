<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/include_goods_return_top"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_line"/>
            <RelativeLayout
                android:id="@+id/return_select_tk_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/return_select_tk_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_return_select_tk"/>
                <TextView
                    android:id="@+id/return_select_tk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/return_select_tk_image"
                    android:text="我要退款(无需退货)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/return_select_tk_image"
                    android:layout_below="@+id/return_select_tk_text"
                    android:text="没收到货，或与卖家协商同意不用退货只退款"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_line"/>
            <RelativeLayout
                android:id="@+id/return_select_th_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/return_select_th_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_return_select_th"/>
                <TextView
                    android:id="@+id/return_select_th_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/return_select_th_image"
                    android:text="我要退货退款"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/return_select_th_image"
                    android:layout_below="@+id/return_select_th_text"
                    android:text="货已收到，需要退还收到的货物"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_line"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>