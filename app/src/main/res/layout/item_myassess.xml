<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/item_myassess_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_myassess_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/item_myassess_head"
        android:lines="1"
        android:text="动手动脚阿松大负荷" />
    <TextView
        android:id="@+id/item_myassess_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/grey"
        android:textSize="13sp"
        android:text="2019-07-23"/>
    <TextView
        android:id="@+id/item_myassess_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="评分"
        android:layout_alignBottom="@+id/item_myassess_ratingBar"
        android:layout_toRightOf="@+id/item_myassess_head"/>
    <RatingBar
        android:id="@+id/item_myassess_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/item_myassess_name"
        android:layout_toRightOf="@+id/item_myassess_pf"
        style="@style/ratingBar_small"/>
    <TextView
        android:id="@+id/item_myassess_rj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="50/人"
        android:layout_alignBottom="@+id/item_myassess_ratingBar"
        android:layout_toRightOf="@+id/item_myassess_ratingBar"/>
    <TextView
        android:id="@+id/item_myassess_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:text="胜多负少发射点发顺丰程序框架第三方"
        android:layout_below="@+id/item_myassess_rj"
        android:layout_toRightOf="@+id/item_myassess_head"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_myassess_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_myassess_content"
        android:layout_toRightOf="@+id/item_myassess_head"/>
    <RelativeLayout
        android:id="@+id/item_myassess_shop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_below="@+id/item_myassess_images"
        android:layout_toRightOf="@+id/item_myassess_head"
        android:background="@mipmap/bg_item_assess_shop">
        <ImageView
            android:id="@+id/item_myassess_shop_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/item_myassess_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textSize="17sp"
            android:singleLine="true"
            android:lines="1"
            android:layout_centerVertical="true"
            android:text="杨国富麻辣烫（吾悦广场）"
            android:layout_toRightOf="@+id/item_myassess_shop_logo"
            android:drawableRight="@mipmap/ic_item_assess_shop_go"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_myassess_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_below="@+id/item_myassess_shop_layout"
        android:layout_toRightOf="@+id/item_myassess_head"
        android:background="@drawable/bg_item_assess_sjhf">
        <TextView
            android:id="@+id/item_myassess_scannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:text="浏览25"/>
        <ImageView
            android:id="@+id/item_myassess_more"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_item_assess_more"/>
        <TextView
            android:id="@+id/item_myassess_sjhf_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>