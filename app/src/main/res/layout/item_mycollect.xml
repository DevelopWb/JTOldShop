<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@mipmap/bg_item_collect_shop">
    <CheckBox
        android:id="@+id/item_collect_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/item_collect_image"
        android:layout_width="70dp"
        android:maxWidth="120dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/item_collect_check"/>
    <TextView
        android:id="@+id/item_collect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/item_collect_image"/>
    <TextView
        android:id="@+id/item_collect_yuexiao"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/item_collect_name"
        android:layout_toRightOf="@+id/item_collect_image"/>
    <TextView
        android:id="@+id/item_collect_price_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorTheme"
        android:text="￥"
        android:layout_marginBottom="2dp"
        android:layout_alignBottom="@+id/item_collect_price"
        android:layout_toRightOf="@+id/item_collect_image"/>
    <TextView
        android:id="@+id/item_collect_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorTheme"
        android:layout_below="@+id/item_collect_yuexiao"
        android:layout_toRightOf="@+id/item_collect_price_l"/>
    <!--店铺的内容-->
    <RatingBar
        android:id="@+id/item_collect_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_toRightOf="@+id/item_collect_yuexiao"
        android:layout_alignBottom="@+id/item_collect_yuexiao"
        style="@style/ratingBar_small"/>
    <TextView
        android:id="@+id/item_collect_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorTheme"
        android:layout_alignBottom="@+id/item_collect_ratingBar"
        android:layout_toRightOf="@+id/item_collect_ratingBar"/>
    <TextView
        android:id="@+id/item_collect_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@+id/item_collect_price"
        android:layout_toRightOf="@+id/item_collect_price"/>
    <TextView
        android:id="@+id/item_collect_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/grey"/>
</RelativeLayout>