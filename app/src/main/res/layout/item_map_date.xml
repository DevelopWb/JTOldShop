<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_dialog_map_image"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dialog_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_dialog_map_image"
        android:lines="1"
        android:text="平安银行"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/item_dialog_map_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_dialog_map_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_dialog_map_ratingBar"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_dialog_map_image"
        android:lines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_dialog_map_name"
        app:layout_constraintLeft_toRightOf="@+id/item_dialog_map_name"
        app:layout_constraintTop_toTopOf="@+id/item_dialog_map_name" />

    <RatingBar
        android:id="@+id/item_dialog_map_ratingBar"
        style="@style/ratingBar_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_dialog_map_name"
        android:layout_toRightOf="@+id/item_dialog_map_image"
        android:isIndicator="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_dialog_map_name"
        app:layout_constraintTop_toBottomOf="@+id/item_dialog_map_name" />

    <TextView
        android:id="@+id/item_dialog_map_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_dialog_map_distance"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/item_dialog_map_image"
        android:maxLines="2"
        android:text="dfadjkfalj"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/item_dialog_map_ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/item_dialog_map_ratingBar" />

    <TextView
        android:id="@+id/item_dialog_map_navigation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_dialog_map_name"
        android:background="@drawable/bt_accent_color_selecter"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="导航"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_dialog_map_image" />
</androidx.constraintlayout.widget.ConstraintLayout>