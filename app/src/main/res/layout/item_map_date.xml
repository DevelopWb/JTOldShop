<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:background="@mipmap/bg_map_date">
    <ImageView
        android:id="@+id/item_dialog_map_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_dialog_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/item_dialog_map_image"/>
    <RatingBar
        android:id="@+id/item_dialog_map_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_below="@+id/item_dialog_map_name"
        android:layout_toRightOf="@+id/item_dialog_map_image"
        style="@style/ratingBar_small"/>
    <TextView
        android:id="@+id/item_dialog_map_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/item_dialog_map_ratingBar"
        android:layout_toRightOf="@+id/item_dialog_map_image"/>
    <TextView
        android:id="@+id/item_dialog_map_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/item_dialog_map_distance"
        android:layout_toRightOf="@+id/item_dialog_map_image"/>
    <ImageView
        android:id="@+id/item_dialog_map_dh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pre_map_dh"
        android:layout_below="@+id/item_dialog_map_name"
        android:layout_alignParentRight="true"/>
</RelativeLayout>