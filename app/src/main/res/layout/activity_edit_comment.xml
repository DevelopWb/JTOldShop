<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_comment_bottom">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <RadioGroup
                android:id="@+id/comment_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/comment_radio1"
                    style="@style/edit_comment_score"
                    android:drawableTop="@drawable/check_score1"/>
                <RadioButton
                    android:id="@+id/comment_radio2"
                    style="@style/edit_comment_score"
                    android:drawableTop="@drawable/check_score2"/>
                <RadioButton
                    android:id="@+id/comment_radio3"
                    style="@style/edit_comment_score"
                    android:drawableTop="@drawable/check_score3"/>
                <RadioButton
                    android:id="@+id/comment_radio4"
                    style="@style/edit_comment_score"
                    android:drawableTop="@drawable/check_score4"/>
                <RadioButton
                    android:id="@+id/comment_radio5"
                    style="@style/edit_comment_score"
                    android:checked="true"
                    android:drawableTop="@drawable/check_score5"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="发货速度打分"/>

                <RatingBar
                    android:id="@+id/comment_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_dialog_map_name"
                    android:layout_toRightOf="@+id/item_dialog_map_image"
                    style="@style/ratingBar"/>
            </LinearLayout>
            <EditText
                android:id="@+id/comment_edittext_rj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:lines="1"
                android:hint="人均"
                android:inputType="number"
                android:background="@drawable/bg_edittext_round"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext_round">
                <EditText
                    android:id="@+id/comment_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="35dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@null"
                    android:gravity="top"
                    android:maxLength="150"
                    android:hint="请输入您的评价"
                    android:lines="6"/>
                <TextView
                    android:id="@+id/comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:text="0/150"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="上传宝贝视频或图片"/>

            <com.dxngxhl.imageselection.t2.ImageSelectionView2
                android:id="@+id/comment_imageselect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numColumns="4">
            </com.dxngxhl.imageselection.t2.ImageSelectionView2>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/edit_comment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <CheckBox
            android:id="@+id/comment_niming"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:button="@drawable/check_edit_comment_niming"
            android:text="  匿名评价"/>
        <ImageView
            android:id="@+id/comment_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/pre_edit_comment_submit"/>
    </RelativeLayout>
</RelativeLayout>