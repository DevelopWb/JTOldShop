<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/sms_code_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="验证码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/sms_code_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/send_check_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="新密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pass_change_pass1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/pass_change_check1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@drawable/check_pass_show" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="确认新密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pass_change_pass2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/pass_change_check2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@drawable/check_pass_show" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:text="密码长度8-20位"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pass_change_submit"
        style="@style/bt_style"
        android:layout_marginTop="50dp"
        android:letterSpacing="0.2"
        android:text="确认" />
</LinearLayout>