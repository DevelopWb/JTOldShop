<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">
    <ImageView
        android:id="@+id/item_myorder_goods_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_myorder_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/item_myorder_goods_image"
        android:layout_toLeftOf="@+id/item_myorder_goods_price" />
    <TextView
        android:id="@+id/item_myorder_goods_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_below="@+id/item_myorder_goods_name"
        android:layout_toRightOf="@+id/item_myorder_goods_image"
        android:layout_toLeftOf="@+id/item_myorder_goods_price" />
    <TextView
        android:id="@+id/item_myorder_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_myorder_goods_name"
        android:text="ï¿¥0.0"/>
    <TextView
        android:id="@+id/item_myorder_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_myorder_goods_name"
        android:text="x1"/>
</RelativeLayout>