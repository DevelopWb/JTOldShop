<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingRight="10dp"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_myorder_goods_image_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        app:cardElevation="1dp">

        <ImageView
            android:id="@+id/item_myorder_goods_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_myorder_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_myorder_goods_image_cv"
        android:maxLines="2"
        android:text="fdsfa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_myorder_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_myorder_goods_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_myorder_goods_image_cv"
        android:text="ï¿¥0.0"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_myorder_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_myorder_goods_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="x1"
        android:textColor="@color/grey"
        android:textSize="14sp" />
</RelativeLayout>