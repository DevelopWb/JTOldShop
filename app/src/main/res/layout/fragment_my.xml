<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/my_center_red_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/my_head_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_my_default_head" />

                <TextView
                    android:id="@+id/my_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableRight="@mipmap/ic_my_meiyong"
                    android:drawablePadding="10dp"
                    android:text="未登录"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_round_top"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_round_white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/my_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/pre_my_order"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="我的订单" />

                            <TextView
                                android:id="@+id/my_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/pre_my_com"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="我的评价" />

                            <TextView
                                android:id="@+id/my_coll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/pre_my_coll"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="我的收藏" />

                            <TextView
                                android:id="@+id/my_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/pre_my_share"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="我的分享" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/my_order_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/my_com_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/my_coll_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/my_share_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="其他"
                        android:textColor="@color/black" />

                    <LinearLayout style="@style/my_item_learnlayout">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@mipmap/ic_my_wx" />

                        <TextView
                            style="@style/my_item_textview"
                            android:text="微信绑定" />

                        <TextView
                            android:id="@+id/my_wx"
                            style="@style/my_item_textview"
                            android:drawableRight="@drawable/pre_my_next"
                            android:drawablePadding="10dp"
                            android:gravity="right"
                            android:text="未绑定"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout style="@style/my_item_learnlayout">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@mipmap/ic_my_qq" />

                        <TextView
                            style="@style/my_item_textview"
                            android:text="QQ绑定" />

                        <TextView
                            android:id="@+id/my_qq"
                            style="@style/my_item_textview"
                            android:drawableRight="@drawable/pre_my_next"
                            android:drawablePadding="10dp"
                            android:gravity="right"
                            android:text="未绑定"
                            android:textColor="@color/grey"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_setting"
                        style="@style/my_item_learnlayout">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@mipmap/ic_my_setting" />

                        <TextView
                            style="@style/my_item_textview"
                            android:drawableRight="@drawable/pre_my_next"
                            android:text="个人设置" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <TextView
                            android:id="@+id/commit_form_tv"
                            style="@style/bt_style"
                            android:layout_marginTop="30dp"
                            android:text="退出登录"
                            android:visibility="invisible"></TextView>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>